{
  "name": "zeropay-backend",
  "version": "1.0.0",
  "description": "ZeroPay Backend API with Secure Redis Cache",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:crypto": "node crypto/encryption.js",
    "redis:start": "redis-server redis/redis.conf",
    "redis:cli": "redis-cli --tls --cert redis/tls/redis.crt --key redis/tls/redis.key --cacert redis/tls/ca.crt -p 6380 --user zeropay-backend",
    "generate:certs": "cd redis && ./generate-tls-certs.sh",
    "lint": "eslint ."
  },
  "keywords": [
    "zeropay",
    "authentication",
    "zk-snark",
    "redis",
    "security"
  ],
  "author": "ZeroPay Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "express": "^4.18.2",
    "redis": "^4.6.11",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
