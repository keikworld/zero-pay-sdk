{
  "name": "zeropay-backend",
  "version": "1.0.0",
  "description": "ZeroPay Backend API with Secure Redis Cache and Blockchain Integration",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "mocha tests/**/*.test.js --timeout 5000",
    "test:crypto": "mocha tests/crypto.test.js --timeout 5000",
    "test:day9-10": "mocha tests/day9-10.test.js --timeout 5000",
    "test:blockchain": "mocha tests/blockchain.test.js --timeout 10000",
    "test:integration": "mocha tests/integration/**/*.test.js --timeout 10000",
    "redis:start": "redis-server redis/redis.conf",
    "redis:stop": "redis-cli -p 6380 shutdown",
    "redis:cli": "redis-cli --tls --cert redis/tls/redis.crt --key redis/tls/redis.key --cacert redis/tls/ca.crt -p 6380 --user zeropay-backend",
    "generate:certs": "cd redis && ./generate-tls-certs.sh",
    "db:setup": "node scripts/setupDatabase.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seedDatabase.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "validate": "npm run lint && npm test"
  },
  "keywords": [
    "zeropay",
    "authentication",
    "zero-knowledge",
    "zk-snark",
    "redis",
    "security",
    "blockchain",
    "solana",
    "psd3",
    "gdpr"
  ],
  "author": "ZeroPay Team",
  "license": "PROPRIETARY",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-kms": "^3.450.0",
    "@solana/web3.js": "^1.87.6",
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
